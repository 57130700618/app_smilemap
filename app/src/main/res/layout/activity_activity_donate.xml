                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_marginTop="40dp"
                android:layout_height="50dp"
                android:src="@drawable/bank_bbl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ชื่อบัญชี: นายธนากร งามวิทยชัยสกุล"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="หมายเลขบัญชี: 026-4-30466-8"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ธนาคาร: กรุงเทพ"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="สาขา: ฟิวเจอร์พาร์ค รังสิต"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="150dp"
                android:layout_marginTop="40dp"
                android:layout_height="50dp"
                android:src="@drawable/bank_kbank"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ชื่อบัญชี: นายธนากร งามวิทยชัยสกุล"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="หมายเลขบัญชี: 183-2-95022-8"
